  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "compile": "tauri build",
    "dev": "webpack-dev-server",
    "format": "yarn format:src && yarn format:css",
    "format:css": "prettier --write src/**/*.css",
